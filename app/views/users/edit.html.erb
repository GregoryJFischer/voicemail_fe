<%= form_with url: '/update', method: :patch, local: true do |f| %>
  <br/>
  <div class="row mb-3">
    <%= f.label :street_address_1, class: "col-sm-2 col-form-label text-center" %>
    <%= f.text_field :street_address_1, class: "col-sm-3" %><br>
  </div>
  <div class="row mb-3">
    <%= f.label :street_address_2, class: "col-sm-2 col-form-label text-center" %>
    <%= f.text_field :street_address_2, class: "col-sm-3" %><br>
  </div>
  <div class="row mb-3">
    <%= f.label :city, class: "col-sm-2 col-form-label text-center" %>
    <%= f.text_field :city, class: "col-sm-3" %><br>
  </div>
  <div class="row mb-3">
    <%= f.label :state, class: "col-sm-2 col-form-label text-center" %>
    <%= f.text_field :state, class: "col-sm-3" %><br>
  </div>
  <div class="row mb-3">
    <%= f.label :zip_code, class: "col-sm-2 col-form-label text-center" %>
    <%= f.text_field :zip_code, class: "col-sm-3" %><br>
  </div>
  <div class="row mb-3">
    <div class="col-sm-2"> </div>
    <%= f.submit class: "col-sm-3" %>
  </div>
<% end %>