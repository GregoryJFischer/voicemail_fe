<div class='m-3'>
<h3>Sending letter to <%= @rep.name %></h3> <br>

  <div class="row">
    <div class="col">

<script>
function wip() {
  $( "#preview2" ).html("<%= escape_javascript(render 'html_preview', commit: 'Preview Letter') %>");
}
</script>



<%= form_with url: "/fetch_preview", method: :get, remote: true do |f| %>
  <%= f.text_area :body, name: 'body', class: "form-control", rows: "29", onKeyUp: "wip()" %><br/><br/>
  <%= f.hidden_field :rep_name, value: @rep.name %>
  <%= f.hidden_field :rep_address_line1, value: @rep.address_line1 %>
  <%= f.hidden_field :rep_address_city, value: @rep.address_city %>
  <%= f.hidden_field :rep_address_state, value: @rep.address_state %>
  <%= f.hidden_field :rep_address_zip, value: @rep.address_zip %>
  <%= f.submit 'Create Letter' %>
  <%= f.submit 'Preview Letter' %>
<% end %>
</div>
<div class="col" id="preview2">

</div>
